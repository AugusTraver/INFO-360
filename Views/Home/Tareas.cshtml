@{
    ViewData["MostrarHeader"] = true;
}
@section FooterContent {
    <partial name="_FooterPartial" /> 
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tus Tareas</title>
    <link rel="stylesheet" href="site.css">
    <script src="site.js" defer></script>
</head>
<body>
    <div class="tareas-page">
        <h1>Tus Tareas</h1>

        <!-- Buscador -->
        <div id="buscadorContainer" style="display: none;">
            <input type="text" id="buscador" placeholder="Buscar tarea...">
            <ul id="lista"></ul>
        </div>

        <!-- Listado de tareas -->
     @foreach (var tarea in ViewBag.Tareas ?? new List<Tarea>())
{
    <div class="card">
        <strong>@tarea.Titulo</strong>
        <span>@tarea.Descripcion</span>
        <span>@(tarea.Finalizado ? "Finalizado" : "Pendiente")</span>

        <form action='@Url.Action("BorrarTarea", "Home")' method="post" style="display: inline;">
            <input type="hidden" name="idTarea" value="@tarea.ID" />
            <button type="submit">Eliminar</button>
        </form>

        <button type="button" onclick="mostrarFormularioActualizar(@tarea.ID)" id="btnMostrarActualizar-@tarea.ID">
            Actualizar tarea
        </button>

        <form id="formActualizarTarea-@tarea.ID"
              action='@Url.Action("ActualizarTarea", "Home")'
              method="post"
              style="display: none;">

            <label for="tituloActualizar-@tarea.ID">Título:</label>
            <input type="text" name="Titulo" id="tituloActualizar-@tarea.ID" placeholder="Título" required>

            <label for="descripcionActualizar-@tarea.ID">Descripción:</label>
            <input type="text" name="Descripcion" id="descripcionActualizar-@tarea.ID" placeholder="Descripción" required>

            <label for="duracionActualizar-@tarea.ID">Duración:</label>
            <select name="Duracion" id="duracionActualizar-@tarea.ID" required>
                <option value="0.25">15 minutos</option>
                <option value="0.5">30 minutos</option>
                <option value="0.75">45 minutos</option>
                <option value="1">1 hora</option>
                <option value="1.5">1 hora y 30 minutos</option>
                <option value="2">2 horas</option>
                <option value="3">3 horas</option>
                <option value="4">4 horas</option>
            </select>
            <input type="hidden" name="ID" value="@tarea.ID" />
            <input type="hidden" name="IDusuario2" value="@ViewBag.IDUsuario" />
            <label for="duracionActualizar-@tarea.ID">Finalizada:</label>
            <select name="Duracion" id="duracionActualizar-@tarea.ID" required>
                <option value="true">si</option>
                <option value="false">no</option>
            </select>
            <input type="date" id="fecha" name="fecha">
            <input type="submit" value="Guardar cambios">
        </form>
    </div>
}
         <div class="card">
        <!-- Botón y formulario para crear tarea -->
        <button type="button" onclick="mostrarFormularioCrear()" id="btnMostrar">
            Agregar nueva tarea
        </button>

        <form id="formCrearTarea"
              action='@Url.Action("CrearTarea", "Home")'
              method="post"
              style="display: none;">

            <label for="tituloAgregar">Título:</label>
            <input type="text" name="Titulo" id="tituloAgregar" required>

            <label for="descripcionAgregar">Descripción:</label>
            <textarea name="Descripcion" id="descripcionAgregar"></textarea>

            <label for="duracionAgregar">Duración:</label>
            <select name="Duracion" id="duracionAgregar" required>
                <option value="0.25">15 minutos</option>
                <option value="0.5">30 minutos</option>
                <option value="0.75">45 minutos</option>
                <option value="1">1 hora</option>
                <option value="1.5">1 hora y 30 minutos</option>
                <option value="2">2 horas</option>
                <option value="3">3 horas</option>
                <option value="4">4 horas</option>
            </select>

            <input type="hidden" name="Finalizado" value="false" />
            <input type="hidden" name="IDusuario" value="@ViewBag.IDUsuario" />
            <input type="date" id="fecha" name="fecha">
            <input type="submit" value="Guardar">
        </form>
    </div>

    <script src="~/js/tareas.js"></script>
</body>
</html>
