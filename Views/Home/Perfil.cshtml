@{
    ViewData["MostrarHeader"] = true;
}

<section class="volver">
    <button type="button" class="btn-volver">
        ←
    </button>
</section>

<section class="perfil-contenedor">

    <h2 class="titulo-perfil">Tu Perfil</h2>

    <div class="avatar">
        <svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 24 24">
	        <path fill="none" stroke="currentColor" stroke-linecap="round" 
              stroke-linejoin="round" stroke-width="2" 
              d="M12 21a9 9 0 1 0 0-18a9 9 0 0 0 0 18m0 0a8.95 8.95 0 0 0 4.951-1.488A3.987 3.987 0 0 0 13 16h-2a3.987 3.987 0 0 0-3.951 3.512A8.95 8.95 0 0 0 12 21m3-11a3 3 0 1 1-6 0a3 3 0 0 1 6 0" />
        </svg>
        <p class="nombre-usuario">@ViewBag.Nombre</p>
    </div>

</section>


<section class="caja-editar">

    <h3>Editar información</h3>

    <form>
        <label>Email</label>
        <input type="text" />

        <label>Información</label>
        <input type="text" />

        <button type="submit" class="btn-guardar">Guardar</button>
    </form>

</section>

<div class="cerrar-contenedor">
     <a class="btn-cerrar" href='@Url.Action("DLogin","Account")'>Cerrar Sesión</a>
</div>
