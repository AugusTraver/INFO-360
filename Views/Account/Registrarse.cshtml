@{
    ViewData["Title"] = "Registrarse";
}
<section class="register-box">
    <h1>Registrarse en ST</h1>
    
       <form action='@Url.Action("Registrarse", "Account")' method="post">
            <li>Mail: 
                <input type="text" name="Email" id="IdUserName">
            </li>

            <li>Usuario: 
                <input type="text" name="Username" id="IdContraseña">
            </li>

            <li>Nombre: 
                <input type="text" name="Nombre" id="IdNombre">
            </li>

            <li>Contraseña: 
                <input type="password" name="Contraseña" id="IdApellido">
            </li>

            <li>Foto usuario: 
                <input type="text" name="Foto" id="IdFoto">
            </li>
        </ul>
 
        <button type="button" class="btn btn-primary btn-lg">Crear Usuario</button>
    </form>

    <p>Ya tenés cuenta, 
        <a>Log In</a>
    </p> 
</section>
